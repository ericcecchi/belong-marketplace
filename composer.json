{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "webroot",
        "version": "4.6",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.6.zip"
        },
        "require": {
          "fancyguy/webroot-installer": "1.0.0"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "underscores",
        "type": "wordpress-theme",
        "version": "1.0.0",
        "dist": {
          "type": "zip",
          "url": "https://github.com/Automattic/_s/archive/master.zip"
        },
        "require" : {
          "composer/installers": "v1.0.6"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "wordpress": "4.6",
    "underscores": "1.0.0",
    "fancyguy/webroot-installer": "1.0.0",
    "wp-api/wp-api": "2.0-beta13",
    "humanmade/s3-uploads": "v2.0.0-beta2",
    "wpackagist-plugin/custom-post-type-ui": "1.4.1"
  },
  "extra": {
    "webroot-dir": "public/wp",
    "webroot-package": "wordpress",
    "installer-paths": {
        "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
        "public/content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
        "public/content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "require-dev": {
    "heroku/heroku-buildpack-php": "dev-master"
  }
}
